{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noImplicitAny": false,
    "jsx": "preserve",
    "incremental": true
  },
  "exclude": [
    "node_modules",
    "cypress"
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
, "src/theme/light-theme-options.js", "src/theme/dark-theme-options.js", "src/theme/base-theme-options.js"  ]
}
